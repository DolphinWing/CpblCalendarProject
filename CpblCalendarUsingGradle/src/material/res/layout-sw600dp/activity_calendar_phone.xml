<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="@dimen/activity_horizontal_margin"
            android:layout_height="match_parent"
            android:src="@drawable/drawer_shadow"
            android:scaleType="fitXY"
            android:scaleX="-1"
            android:contentDescription="@null"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:layout_width="@dimen/activity_horizontal_margin"
            android:layout_height="match_parent"
            android:src="@drawable/drawer_shadow"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true" />

        <!-- The main content view -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin">

            <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="dolphin.android.apps.CpblCalendar.GameListFragment"
                android:id="@+id/content_frame"
                tools:layout="@layout/listview_empty_view" />
        </FrameLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@color/holo_green_dark"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:gravity="bottom"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Headline"
            android:paddingBottom="8dp"/>

        <!-- http://goo.gl/HYmvGy -->
        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/button_floating_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/padding_large"
            android:src="@drawable/ic_action_action_search"
            app:fab_colorNormal="@color/holo_green_light"
            app:fab_colorPressed="@color/holo_green_light_light"
            app:fab_type="normal"
            app:fab_shadow="true" />

        <include layout="@layout/include_loading_frame" />

        <TextView
            android:id="@android:id/message"
            style="@style/Theme.Holo_green.LoadingText"
            android:layout_marginBottom="8dp"
            android:layout_alignBottom="@+id/button_floating_action"
            android:layout_alignParentBottom="false" />

    </RelativeLayout>

    <!-- The navigation drawer -->
    <include
        android:id="@+id/left_drawer"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        layout="@layout/layout_query_pane" />
</android.support.v4.widget.DrawerLayout>
