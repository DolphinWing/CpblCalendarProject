<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/holo_green_dark" />
        <!-- The main content view -->
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:name="dolphin.android.apps.CpblCalendar.GameListFragment"
            android:id="@+id/content_frame"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            tools:layout="@layout/listview_item_matchup" />

        <!-- http://goo.gl/HYmvGy -->
        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/button_floating_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/padding_large"
            android:src="@drawable/ic_action_action_search"
            app:fab_colorNormal="@color/holo_green_light"
            app:fab_colorPressed="@color/holo_green_light_light"
            app:fab_type="mini"
            app:fab_shadow="true" />

        <include layout="@layout/include_loading_frame" />

        <TextView
            android:id="@android:id/message"
            style="@style/Theme.Holo_green.LoadingText" />

    </RelativeLayout>

    <!-- The navigation drawer -->
    <include
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        layout="@layout/layout_query_pane" />
</android.support.v4.widget.DrawerLayout>
