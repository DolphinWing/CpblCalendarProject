<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="dolphin.android.apps.CpblCalendar3">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".CpblApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_config"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_r"
        android:theme="@style/Theme.Holo_green"
        tools:replace="android:theme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="dolphin.android.apps.CpblCalendar.CalendarForPhoneActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="locked"
            android:theme="@style/Theme.Holo_green.Settings" />

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:enabled="@bool/feature_admob"
            android:theme="@android:style/Theme.Translucent" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".HighlightActivity"
            android:screenOrientation="locked" />

        <meta-data
            android:name="WindowManagerPreference:FreeformWindowSize"
            android:value="phone" />
        <meta-data
            android:name="WindowManagerPreference:FreeformWindowOrientation"
            android:value="portrait" />

        <activity
            android:name=".SplashActivity"
            android:screenOrientation="locked">
            <layout
                android:defaultHeight="720dp"
                android:defaultWidth="480dp"
                android:gravity="center_horizontal|center_vertical"
                tools:targetApi="n" />
        </activity>

    </application>

</manifest>