<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Holo_green" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="toolbarStyle">@style/Theme.Holo_green.Toolbar</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="Theme.Holo_green.SplashTheme" parent="Theme.Holo_green">
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:windowBackground">@drawable/splash_background</item>
        <!-- http://developer.android.com/reference/android/R.attr.html#windowEnterAnimation -->
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Theme.Holo_green.Settings" parent="@style/Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

</resources>