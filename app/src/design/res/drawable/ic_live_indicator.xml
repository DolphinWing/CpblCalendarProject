<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- http://evis.me/2013/05/android-dev-render-button-with-shadow-using-drawable-xml/ -->

    <!-- outer circle -->
    <item>
        <shape android:shape="oval" >
            <solid android:color="#00ACB8C3" />
        </shape>
    </item>

    <!-- inner shadow of outer circle -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="#FFEF1200" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="oval">
            <solid android:color="#FFEF1200" />
        </shape>
    </item>
</layer-list>