<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/holo_green_dark"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <LinearLayout
        android:id="@+id/filter_view_pane"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/holo_green_dark"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:text="@string/app_name" />

        <HorizontalScrollView
            android:id="@+id/filter_list_pane"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:dividerPadding="8dp"
                android:orientation="horizontal"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@+id/toolbar">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corner"
                    android:text="@string/title_game_year" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corner"
                    android:text="@string/title_game_field" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corner"
                    android:text="@string/title_favorite_teams" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

            </LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/filter_control_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@+id/filter_view_pane"
        app:tabGravity="fill"
        app:tabMode="scrollable" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout" />

    <LinearLayout
        android:id="@+id/filter_control_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/bottom_sheet_background"
        android:elevation="4dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filter_view_pane">

        <LinearLayout
            android:id="@+id/filter_control_pane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/holo_green_dark"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                style="@style/Theme.Holo_green.QueryPane.Title"
                android:text="@string/title_game_year" />

            <Spinner
                android:id="@+id/spinner3"
                style="@style/Theme.Holo_green.QueryPane.Spinner" />

            <TextView
                style="@style/Theme.Holo_green.QueryPane.Title"
                android:text="@string/title_game_field" />

            <Spinner
                android:id="@+id/spinner1"
                style="@style/Theme.Holo_green.QueryPane.Spinner"
                android:entries="@array/cpbl_game_field_name" />

            <TextView
                style="@style/Theme.Holo_green.QueryPane.Title"
                android:text="@string/title_favorite_teams" />

            <Spinner
                android:id="@+id/spinner2"
                style="@style/Theme.Holo_green.QueryPane.Spinner"
                android:entries="@array/cpbl_team_name" />

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <Button
                android:id="@android:id/button1"
                style="@style/ButtonHolo_green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/padding_large"
                android:text="@string/title_query" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>