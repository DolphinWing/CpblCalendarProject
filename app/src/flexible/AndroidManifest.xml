<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="dolphin.android.apps.CpblCalendar3">

    <!-- <uses-permission android:name="android.permission.WAKE_LOCK" /> -->
    <application
        android:name=".CpblApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_config"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_r"
        android:theme="@style/Theme.Holo_green"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:theme">

        <activity
            android:name=".SettingsActivity3"
            android:screenOrientation="locked"
            android:theme="@style/Theme.Holo_green.Settings" />
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:enabled="@bool/feature_admob"
            android:theme="@android:style/Theme.Translucent" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".HighlightActivity3"
            android:screenOrientation="locked" />

        <activity
            android:name=".SplashActivity"
            android:enabled="false" />

        <activity
            android:name=".CacheModeListActivity"
            android:screenOrientation="locked" />

        <activity
            android:name="dolphin.android.apps.CpblCalendar.CalendarForPhoneActivity"
            android:screenOrientation="locked" />

        <activity
            android:name=".SplashActivity3"
            android:label="@string/app_name"
            android:screenOrientation="locked"
            android:theme="@style/Theme.Holo_green.SplashTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <!-- Use static launch bounds -->
            <layout
                android:defaultHeight="720dp"
                android:defaultWidth="480dp"
                android:gravity="top|end"
                android:minHeight="640dp"
                android:minWidth="480dp" />
        </activity>
        <activity
            android:name=".ListActivity"
            android:screenOrientation="locked" />
    </application>

</manifest>